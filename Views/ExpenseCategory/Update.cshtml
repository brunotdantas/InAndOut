@model InAndOut.Models.ExpenseCategory

<form method="post" asp-action="UpdatePost">
    <input asp-for="Id" hidden />

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Expense Category</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-12">
                        <label asp-for="ExpenseDescription"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <input asp-for="ExpenseDescription" class="form-control" />
                        <span asp-validation-for="ExpenseDescription" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a class="btn btn-danger w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
